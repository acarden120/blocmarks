<ul><% topic.bookmarks.each do |bookmark| %>
	<li><b><%= link_to bookmark.url, bookmark.url %></b></li>
    <% if policy(topic).destroy? %>
    <p><%= link_to "Delete", topic_bookmark_path(topic, bookmark), method: :delete, data: {confirm: 'Are you sure you want to delete bookmark?'} %> 
    <% end %>
    <% if policy(topic).update? %>
     | <%= link_to "Edit", edit_topic_bookmark_path(topic, bookmark) %>
    <% end %>
    <% if policy(topic).update? %>    
     | <%#= render partial: 'likes/like', locals: {topic: topic, bookmark: @bookmark } %>
  <div>
  <% if like = current_user.liked(@bookmark) %>
    <%= link_to [bookmark, like], class: 'btn btn-danger', method: :delete do %>
      <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unlike
    <% end %>
  <% else %>
    <%= link_to [bookmark, like.new], class: 'btn btn-primary', method: :post do %>
      <i class="glyphicon glyphicon-star"> </i>&nbsp; Like
    <% end %>
  <% end %>
  </div>
    <% end %>
<% end %>
</ul>
<div class='container'>
<h2>Topics</h2>
<% @topics.each do |topic| %>
  <div class="media">
    <div class="media-body">
    <% if current_user %>
    <h4><b><%= link_to topic.title, [topic] %></b></h4>
    <% else %>
    <h4><b><%= topic.title %></b></h4>
    <% end %>        
    <% if policy(topic).destroy? %><p><%= link_to "Delete", [topic], method: :delete %></p><% end %>
      <%= render partial: 'bookmarks/bookmarks', locals: {topic: topic} %>
  </div>
<% end %>
  <% if current_user %>
  <div><br><br><b>Add new topic</b>
      <%= render partial: 'topics/form', locals: {user: @user, topic: @topic} %>
  </div>
  <% end %>
</div>
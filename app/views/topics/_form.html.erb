<%= form_for [@user, Topic.new] do |f| %>
  <div class='row'>
    <div class='col-md-8'><b><%= f.text_field :title, :size => '25%', placeholder: "  Enter the new topic here" %></b></div><br><br>
    <div class='col-md-8'><b><%= f.submit 'Add', class: 'btn btn-success' %></b></div>
  </div>
<% end %>